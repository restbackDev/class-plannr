<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css" />
    <link href="/style.css" rel="stylesheet" type="text/css" />
    <title>Your Apps</title>
  </head>
  <body>
    <header class="hero">
      <div class="hero-body">
        <h1 class="title">Class plannr</h1>
        <h2 class="subtitle">A class schedule application tracker.</h2>
        <%- include('../partials/_navbar.ejs') %>
      </div>
    </header>

    <main>
      <section class="box container is-max-tablet">
                <!-- the list of class  -->
                <div>
                  <ul>
                    <% user.applications.forEach(application => { %>
                      <li>
                        <a href="/users/<%= user._id %>/applications/<%= application._id %>">
                          <%= application.title %>  <%= application.date %> <%= application.time %> <%= application.day %> 
                        </a>
                      </li>
                      <% }); %>
                    </ul>
                </div>
                <!-- the list of class  -->
      </section>
    </main>
    <%- include('../partials/_footer.ejs') %>
  </body>
</html>
